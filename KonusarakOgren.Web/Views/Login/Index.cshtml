@{ 
    Layout = null;
}

@model KonusarakOgren.Web.Dto.Login.LoginDto
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body{
            padding:0px;
        }

        .login-page {
            display: flex;
            justify-content: center;
            align-items: center;
            flex: 1;
            width:100%;
            height:100%;
            position:absolute;
            left:0px;
            top:0px;
            justify-content:center;
            align-items:center;
        }
        .login-box{
            display:block;
            width:200px;
            height:200px;
        }
    </style>
</head>
<body>
    <div class="login-page">
        <div class="login-box">
            @using (Html.BeginForm())
            {
            <div class="row">
                <div class="col-xs-12">
                    <label>Kullanıcı Adı</label>
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                </div>
                <div class="col-xs-12">
                    <label>Şifre</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                </div>
                <div class="col-xs-12">
                    @Html.ValidationSummary()
                </div>

            </div>

                <button type="submit">
                    Giriş
                </button>
            }
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
